# Staging Environment Configuration Template
# Copy this file to .env.staging and fill in the actual values

# Application
NODE_ENV=staging
API_PORT=3000
FRONTEND_PORT=4200
API_URL=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5433
DB_NAME=erp_staging
DB_USER=erp_admin
DB_PASSWORD=your_secure_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=your_redis_password_here

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5673
RABBITMQ_MGMT_PORT=15673
RABBITMQ_USER=erp_admin
RABBITMQ_PASSWORD=your_rabbitmq_password_here

# Elasticsearch
ES_HOST=localhost
ES_PORT=9201

# MinIO Object Storage
MINIO_HOST=localhost
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_USER=erp_admin
MINIO_PASSWORD=your_minio_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=your_refresh_secret_key_here_min_32_chars
JWT_REFRESH_EXPIRATION=7d

# CORS
CORS_ORIGIN=http://localhost:4200,http://localhost:8080

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=noreply@tsaitung.com

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

# Nginx
NGINX_PORT=8080
NGINX_SSL_PORT=8443

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=file,console

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# Session
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600

# Two-Factor Authentication
TOTP_ISSUER=菜蟲農食 ERP
TOTP_WINDOW=1

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Feature Flags
FEATURE_SSO_ENABLED=false
FEATURE_MFA_REQUIRED=false
FEATURE_API_DOCS_ENABLED=true
FEATURE_METRICS_ENABLED=true